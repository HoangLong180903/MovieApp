<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/ScreenBackground"
    tools:context=".activity.FavoriteActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:id="@+id/poster_path"
        android:src="@drawable/image_top"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/icon_back"
            android:layout_alignParentLeft="true"
            android:src="@drawable/baseline_arrow_back_24"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/layout_center"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/shape_detail"
        android:layout_alignParentBottom="true"
        style="@style/ScreenBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/original_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="original_title"
                android:textSize="24dp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc_genres_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                tools:listitem="@layout/item_genres_detail"/>
            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/baseline_star_24" />

                <TextView
                    android:id="@+id/vote_average"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textColor="#000000"
                    android:text="7,8/10"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <TextView
                android:id="@+id/release_date"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#000000"
                android:text="release_date"
                android:textSize="14dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/runtime"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="runtime: 180min"
                android:textColor="#000000"
                android:textSize="14dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/revenue"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#000000"
                android:text="revenue: 1$"
                android:textSize="14dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/status"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="status: Dang hoat dong"
                android:textColor="#000000"
                android:textSize="14dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tagline"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="tagline: never give up"
                android:textColor="#000000"
                android:textSize="14dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="An ex-special forces operative takes a job to provide security for a journalist as she interviews a dictator, but a military coup breaks out in the middle of the interview, they are forced to escape into the jungle where they must survive."
                android:textSize="14dp"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Companies:"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc_companies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                tools:listitem="@layout/item_companies" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>